@model MailRequest
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h3>SendEmail</h3>

<form class="form-group" method="post">
    <label>Alıcı Maili</label>
    <input type="text" asp-for="ReceiverMail" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="EmailSubject" class="form-control" />
    <br />
    <label>Mesaj</label>
    <textarea cols="3" rows="5" asp-for="EmailContent" class="form-control"></textarea>
    <br />
    <button class="btn btn-outline-success">Gönder</button>
</form>
