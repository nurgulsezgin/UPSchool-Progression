@model CRMUpschool.EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<h1>Yeni kategori sayfası</h1>
<form method="post">
    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control"/>
    <br />
    <label>Kategori Açıklaması</label>
    <input type="text" asp-for="CategoryDescription" class="form-control" />
    <br />

    <button class="btn btn-success">KAYDET</button>
</form>

