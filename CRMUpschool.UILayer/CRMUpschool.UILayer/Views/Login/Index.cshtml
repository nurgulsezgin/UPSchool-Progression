@model AppUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Bootstrap-Admin-Template/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Bootstrap-Admin-Template/template/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Bootstrap-Admin-Template/template/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Bootstrap-Admin-Template/template/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Bootstrap-Admin-Template/template/images/logo.svg" alt="logo">
                            </div>
                            <h4>Merhaba! Hadi başlayalım</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapınız.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adınız" asp-for="UserName">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifreniz" asp-for="PasswordHash">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Bootstrap-Admin-Template/template/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Bootstrap-Admin-Template/template/js/off-canvas.js"></script>
    <script src="~/Bootstrap-Admin-Template/template/js/hoverable-collapse.js"></script>
    <script src="~/Bootstrap-Admin-Template/template/js/template.js"></script>
    <!-- endinject -->
</body>

</html>

