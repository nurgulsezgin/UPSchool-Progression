@model IPortfolioProject.Models.TblMessage
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_InitialLayoutPage.cshtml";
}

<!--
      - #CONTACT
    -->

<article class="contact active">

    <header>
        <h2 class="h2 article-title">@ViewBag.v1</h2>
    </header>

    <section class="mapbox" data-mapbox>
        <figure>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d199666.5651251294!2d-121.58334177520186!3d38.56165006739519!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x809ac672b28397f9%3A0x921f6aaa74197fdb!2sSacramento%2C%20CA%2C%20USA!5e0!3m2!1sen!2sbd!4v1647608789441!5m2!1sen!2sbd"
                    width="400" height="300" loading="lazy"></iframe>
        </figure>
    </section>
    @using (Html.BeginForm())
    {
        <section class="contact-form">

            <h3 class="h3 form-title">@ViewBag.v2</h3>

            <form method="post" class="form" data-form>

                <div class="input-wrapper">
                    @*@Html.HiddenFor(x=>x.MessageID)*@
                    @Html.TextBoxFor(x => x.FullName, new { @placeholder = "Full Name", @required = "required", @class = "form-input" })
                    @Html.TextBoxFor(x => x.EmailAdress, new { @placeholder = "Email address", @required = "required", @class = "form-input" })
                </div>
                @Html.TextAreaFor(x => x.MessageContent, new { @placeholder = "Your Message", @required = "required", @class = "form-input" })
                <button class="form-btn" type="submit">
                    <ion-icon name="paper-plane"></ion-icon>
                    <span>Send Message</span>
                    @*@if (ViewBag.Alert != null)
                                {
                                    <script type="text/javascript">

                        window.onload = function () {
                            alert("@ViewBag.Alert");
                        };
                                    </script>

                                }*@
                </button>
            </form>
        </section>

    }
</article>
@if (ViewData["AlertMessage"] != null)
{
    <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewData["AlertMessage"]");
                };
    </script>
}



