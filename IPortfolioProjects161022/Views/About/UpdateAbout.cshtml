@model IPortfolioProjects161022.Models.Entities.TblAbout

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<form method="post">
    @Html.HiddenFor(x=>x.AboutId)
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Decription, new { @class = "form-control" })
    <br />
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
</form>

