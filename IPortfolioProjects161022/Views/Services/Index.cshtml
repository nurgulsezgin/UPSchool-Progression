@using IPortfolioProjects161022.Models.Entities
@model List<TblServices>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sayac = 0;
}

<h2>Hizmetlerim</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        sayac += 1;
        <tr>
            @*<td>@item.ServicesId</td>*@
            <td>@sayac</td>
            <td>@item.Title</td>
            <td><a href="/Services/DeleteService/@item.ServicesId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Services/UpdateService/@item.ServicesId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="#" class="btn btn-primary">Yeni hizmet girişi</a>
