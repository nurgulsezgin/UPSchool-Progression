@model List<GetAllStudentQueryResult>
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h1>Öğrenci Paneli</h1>

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Sehir</th>
            <th>Bölüm </th>
            <th>Sil </th>
            <th>Güncelle </th>
            <th>Detaylar </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.Department</td>
                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Student/AddStudent/" class="btn btn-outline-primary">Yeni Kayıt Girişi</a>
</div>
