@model AppUser
@{
    ViewData["Title"] = "Login Page";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!--Css Links-->
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/assets/pot.png" width="150px" height="150px" class="mx-auto text-center" alt="logo" />
                            </div>
                            <h4>Merhaba! Hadi başlayalım</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapınız.</h6>
                        <!--Post Method-->
                            <form class="pt-3 " method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adınız" asp-for="UserName">
                                </div>
                                <div class="form-group mt-3">
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifreniz" asp-for="PasswordHash">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium">Giriş Yap</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- JS -->
    <script>

    </script>
</body>

</html>

